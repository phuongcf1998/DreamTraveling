<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>FilterDispatcher</filter-name>
        <filter-class>phuongntd.filter.FilterDispatcher</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterDispatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>phuongntd.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>phuongntd.servlet.LogOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveItemCartServlet</servlet-name>
        <servlet-class>phuongntd.servlet.RemoveItemCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitCartServlet</servlet-name>
        <servlet-class>phuongntd.servlet.InitCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateTourServlet</servlet-name>
        <servlet-class>phuongntd.servlet.CreateTourServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateItemInCartServlet</servlet-name>
        <servlet-class>phuongntd.servlet.UpdateItemInCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetDiscountServlet</servlet-name>
        <servlet-class>phuongntd.servlet.GetDiscountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveItemCartServlet</servlet-name>
        <url-pattern>/RemoveItemCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitCartServlet</servlet-name>
        <url-pattern>/InitCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateTourServlet</servlet-name>
        <url-pattern>/CreateTourServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateItemInCartServlet</servlet-name>
        <url-pattern>/UpdateItemInCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetDiscountServlet</servlet-name>
        <url-pattern>/GetDiscountServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>TravelingSite</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
